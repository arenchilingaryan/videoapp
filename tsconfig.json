{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "build",
    "target": "ES2019",
    "module": "CommonJS",
    "sourceMap": true,
    "moduleResolution": "node",
    "types": ["node"],
    "skipLibCheck": true
  },
  "ts-node": {
    "files": true
  },
  "files": ["src/types/express.d.ts"],
  "include": ["src/**/*.ts", "test/**/*.ts", "./src/global"],
  "exclude": ["node_modules"]
}
